<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:rte='urn:import:org.nsesa.editor.gwt.dialog.client.ui.rte'
             xmlns:author='urn:import:org.nsesa.editor.gwt.dialog.client.ui.handler.modify.author'>
    <ui:style field="res">

        .header {
            width: 100%;
            height: 25px;
            font-size: 1.5em;
        }

        .footer {
            width: 100%;
            text-align: center;
            margin-top: 5px;
        }

        .newPanel {

        }

        .authorsPanel {

        }

        .additionalPanel {

        }

        .footNotesPanel {

        }

        .cancelLink {
            padding-right: 10px;
            cursor: pointer;
        }
    </ui:style>
    <g:DockLayoutPanel unit="PX" ui:field="dockPanel">
        <g:north size='40'>
            <g:HTML styleName="{res.header}" ui:field="title"/>
        </g:north>
        <g:center>
            <g:TabLayoutPanel barHeight="40" barUnit="PX" ui:field="tabLayoutPanel">
                <g:tab>
                    <g:header>Original</g:header>
                    <g:DockLayoutPanel unit="PCT">
                        <g:center>
                            <rte:RichTextEditor ui:field="newText"/>
                        </g:center>
                        <g:east size="20">
                            <g:HTMLPanel>
                                <h1>Types</h1>
                            </g:HTMLPanel>
                        </g:east>
                    </g:DockLayoutPanel>

                </g:tab>
                <g:tab>
                    <g:header>Authors</g:header>
                    <g:HTMLPanel styleName="{res.authorsPanel}">
                        <author:AuthorPanelView ui:field="authorPanelView"/>
                    </g:HTMLPanel>
                </g:tab>
                <g:tab>
                    <g:header>Footnotes</g:header>
                    <g:HTMLPanel styleName="{res.footNotesPanel}">
                        <h1>Footnotes</h1>
                    </g:HTMLPanel>
                </g:tab>
                <g:tab>
                    <g:header>Additional</g:header>
                    <g:HTMLPanel styleName="{res.additionalPanel}">
                        <h1>Additional</h1>
                    </g:HTMLPanel>
                </g:tab>
            </g:TabLayoutPanel>
        </g:center>
        <g:south size="40">
            <g:HTMLPanel styleName="{res.footer}">
                <g:Button ui:field="saveButton" text="Save"/>
                <g:Anchor ui:field="cancelLink" text="Cancel" styleName="{res.cancelLink}"/>
            </g:HTMLPanel>
        </g:south>
    </g:DockLayoutPanel>

</ui:UiBinder>