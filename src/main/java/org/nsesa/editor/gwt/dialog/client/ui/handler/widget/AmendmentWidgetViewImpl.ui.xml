<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:rte='urn:import:org.nsesa.editor.gwt.dialog.client.ui.rte'
             xmlns:author='urn:import:org.nsesa.editor.gwt.dialog.client.ui.tab.author'>
    <ui:style field="res">

        .header {
            width: 100%;
            height: 25px;
            font-size: 1.2em;
        }

        .footer {
            width: 100%;
            text-align: center;
            height: 25px;
        }

        .originalPanel {

        }

        .originalContent {

        }

        .authorsPanel {

        }

        .additionalPanel {

        }

        .footNotesPanel {

        }

        .amendmentPanel {

        }

        .amendmentContent {

        }
    </ui:style>
    <g:DockLayoutPanel unit="PX" ui:field="dockPanel">
        <g:north size='20'>
            <g:HTML styleName="{res.header}" ui:field="title">HEADER</g:HTML>
        </g:north>
        <g:center>
            <g:DockLayoutPanel unit="PCT">
                <g:center size="50">
                    <g:TabLayoutPanel barHeight="40" barUnit="PX" ui:field="tabLayoutPanel">
                        <g:tab>
                            <g:header>Original</g:header>
                            <g:HTMLPanel styleName="{res.originalPanel}">
                                <rte:RichTextEditor ui:field="originalText"/>
                            </g:HTMLPanel>
                        </g:tab>
                        <g:tab>
                            <g:header>Authors</g:header>
                            <g:HTMLPanel styleName="{res.authorsPanel}">
                                <author:AuthorPanelView ui:field="authorPanelView"/>
                            </g:HTMLPanel>
                        </g:tab>
                        <g:tab>
                            <g:header>Footnotes</g:header>
                            <g:HTMLPanel styleName="{res.footNotesPanel}">
                                <h1>Footnotes</h1>
                            </g:HTMLPanel>
                        </g:tab>
                        <g:tab>
                            <g:header>Additional</g:header>
                            <g:HTMLPanel styleName="{res.additionalPanel}">
                                <h1>Additional</h1>
                            </g:HTMLPanel>
                        </g:tab>
                    </g:TabLayoutPanel>
                </g:center>
                <g:east size="50">
                    <g:TabLayoutPanel barHeight="40" barUnit="PX">
                        <g:tab>
                            <g:header>Amendment</g:header>
                            <g:HTMLPanel styleName="{res.amendmentPanel}">
                                <rte:RichTextEditor ui:field="amendmentText"/>
                            </g:HTMLPanel>
                        </g:tab>
                    </g:TabLayoutPanel>
                </g:east>
            </g:DockLayoutPanel>
        </g:center>
        <g:south size="40">
            <g:HTMLPanel styleName="{res.footer}">
                <g:Button ui:field="saveButton" text="Save"/>
                <g:Button ui:field="cancelButton" text="Cancel"/>
            </g:HTMLPanel>
        </g:south>
    </g:DockLayoutPanel>

</ui:UiBinder>