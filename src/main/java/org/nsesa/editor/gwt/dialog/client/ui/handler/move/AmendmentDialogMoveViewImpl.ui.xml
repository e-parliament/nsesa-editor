<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>
    <ui:style field="res">

        .header {
            width: 100%;
            height: 25px;
            font-size: 1.5em;
        }

        .footer {
            width: 100%;
            text-align: center;
            height: 25px;
            margin-top: 5px;
        }

        .cancelLink {
            padding-right: 10px;
            cursor: pointer;
        }
    </ui:style>
    <g:DockLayoutPanel unit="PX" ui:field="dockPanel">
        <g:north size='40'>
            <g:HTML styleName="{res.header}">HEADER</g:HTML>
        </g:north>
        <g:center>
            <g:DockLayoutPanel unit="PCT">
                <g:center size="50">
                    <g:HTMLPanel>
                        <h1>Move editor</h1>
                    </g:HTMLPanel>
                </g:center>
            </g:DockLayoutPanel>
        </g:center>
        <g:south size="40">
            <g:HTMLPanel styleName="{res.footer}">
                <g:Button ui:field="saveButton" text="Save"/>
                <g:Anchor ui:field="cancelLink" text="Cancel" styleName="{res.cancelLink}"/>
            </g:HTMLPanel>
        </g:south>
    </g:DockLayoutPanel>

</ui:UiBinder>