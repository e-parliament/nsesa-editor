<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE module PUBLIC "-//Google Inc.//DTD Google Web Toolkit 2.4.0//EN"
        "http://google-web-toolkit.googlecode.com/svn/tags/2.4.0/distro-source/core/src/gwt-module.dtd">
<module rename-to="Editor">
    <inherits name="org.nsesa.editor.gwt.core.Core"/>
    <inherits name="org.nsesa.editor.gwt.dialog.Dialog"/>

    <stylesheet src="css/editor.css"/>

    <set-configuration-property name="overlayFactories"
                                value="org.nsesa.editor.gwt.core.client.ui.overlay.document.akomantoso.AkomaNtoso20OverlayFactory"/>

    <!--If we find a Overlay factory, make sure to process it with the generator.-->
    <generate-with class="org.nsesa.editor.gwt.core.server.generator.GwtOverlayGenerator">
        <when-type-assignable class="org.nsesa.editor.gwt.core.client.ui.overlay.document.OverlayFactory"/>
    </generate-with>

    <source path="client"/>
    <source path="shared"/>
    <public path="public"/>

    <entry-point class="org.nsesa.editor.gwt.editor.client.Editor"/>
</module>