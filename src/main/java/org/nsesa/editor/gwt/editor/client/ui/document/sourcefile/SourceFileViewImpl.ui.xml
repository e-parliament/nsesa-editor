<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:marker='urn:import:org.nsesa.editor.gwt.editor.client.ui.document.sourcefile.marker'
             xmlns:actionbar='urn:import:org.nsesa.editor.gwt.editor.client.ui.document.sourcefile.actionbar'
             xmlns:content='urn:import:org.nsesa.editor.gwt.editor.client.ui.document.sourcefile.content'
             xmlns:header='urn:import:org.nsesa.editor.gwt.editor.client.ui.document.sourcefile.header'
             xmlns:deadline='urn:import:org.nsesa.editor.gwt.core.client.ui.deadline'
        >
    <ui:style field="res">

        .document {
            /* Note: parent td width is set in the document view!*/
            position: relative;
            top: -20px;
            width: 100%;

            border-collapse: collapse;
            border-spacing: inherit;
            max-width: none;
        }

        .contentHolder {
        }

        .content {

        }

        .deadline {
            position: relative;
            left: 0;
            right: 0;
            margin: 0 auto;
            padding-left: 5px;
            padding-right: 5px;
            padding-top: 5px;
            top: 10px;
            max-width: 350px;
            height: 20px;
            font-weight: bold;
            text-align: center;
            vertical-align: baseline;
            z-index: 1;
        }

        .sourceFileHeader {
            width: 100%;
            padding: 5px;
            height: 20px;
            background-color: #eee;
            border: 1px solid #ccc;
        }

        .marker {
            /* Note: parent td width is set in the document view!*/
            width: 100%;
        }

        .actionBarController {
            position: absolute;
            border: 1px solid gray;
            background-color: #eee;
            min-width: 350px;
            z-index: 1;
            padding: 5px;
        }
    </ui:style>
    <g:HTMLPanel styleName="document">
        <header:SourceFileHeaderView ui:field="sourceFileHeaderView" styleName="{res.sourceFileHeader}"/>
        <actionbar:ActionBarView ui:field="actionBarView" styleName="{res.actionBarController}"/>
        <deadline:DeadlineView ui:field="deadlineView" styleName="{res.deadline}"/>
        <g:HorizontalPanel styleName="{res.document}" ui:field="horizontalPanel">
            <g:HTMLPanel styleName="{res.contentHolder}" ui:field="contentHolder">
                <content:ContentView ui:field="contentView" styleName="{res.content}"/>
            </g:HTMLPanel>
            <marker:MarkerView ui:field="markerView" styleName="{res.marker}"/>
        </g:HorizontalPanel>
    </g:HTMLPanel>

</ui:UiBinder>