<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:header='urn:import:org.nsesa.editor.gwt.editor.client.ui.document.amendments.header'
             xmlns:filter='urn:import:org.nsesa.editor.gwt.editor.client.ui.document.amendments.filter'
             xmlns:pagination='urn:import:org.nsesa.editor.gwt.editor.client.ui.pagination'
        >
    <ui:style src="AmendmentsPanelViewImpl.css" field="css"
              type='org.nsesa.editor.gwt.editor.client.ui.document.amendments.AmendmentsPanelViewCss'/>
    <ui:style field="res">

        .amendmentsPanel {
            width: 98%;
            position: relative;
            left: 1%;
        }

        .scrollPanel {
            width: 100%;
        }

        .amendmentsHeader {
            width: 100%;
            padding: 5px;
            background-color: #eee;
            border: 1px solid #ccc;
        }

        .pagination {
            float: right;
        }

    </ui:style>
    <g:HTMLPanel>
        <g:HorizontalPanel styleName="{res.amendmentsHeader}">
            <header:AmendmentsHeaderView ui:field="amendmentsHeaderView"/>
            <filter:AmendmentsFilterView ui:field="filterView"/>
        </g:HorizontalPanel>
        <g:ScrollPanel ui:field="scrollPanel" styleName="{res.scrollPanel}">
            <g:VerticalPanel ui:field="amendmentsPanel" styleName="{res.amendmentsPanel}"/>
        </g:ScrollPanel>
        <g:HorizontalPanel styleName="{res.amendmentsHeader}">
            <pagination:PaginationView ui:field="paginationView" styleName="{res.pagination}"/>
        </g:HorizontalPanel>
    </g:HTMLPanel>
</ui:UiBinder>