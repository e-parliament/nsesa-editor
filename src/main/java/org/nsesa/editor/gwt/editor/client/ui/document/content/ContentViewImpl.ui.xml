<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>
    <ui:style src="ContentViewImpl.css" field="css"
              type='org.nsesa.editor.gwt.editor.client.ui.document.content.ContentViewCss'/>
    <ui:style field="res">
        .scrollPanel {

        }

        .documentPanel {
            margin: 20px;
            padding: 8%;
            border: 1px solid black;

            -moz-box-shadow: 10px 10px 5px #888;
            -webkit-box-shadow: 10px 10px 5px #888;
            box-shadow: 10px 10px 5px #888;
        }

        .contentPanel {
            width: 100%;
        }
    </ui:style>
    <g:ScrollPanel ui:field="scrollPanel" styleName="{res.scrollPanel}">
        <g:HTMLPanel styleName="{res.documentPanel}">
            <g:HTML ui:field="contentPanel" styleName="{res.contentPanel}"/>
        </g:HTMLPanel>
    </g:ScrollPanel>
</ui:UiBinder>