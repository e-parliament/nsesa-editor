<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:header='urn:import:org.nsesa.editor.gwt.editor.client.ui.header'
             xmlns:footer='urn:import:org.nsesa.editor.gwt.editor.client.ui.footer'
             xmlns:amendments='urn:import:org.nsesa.editor.gwt.editor.client.ui.amendments'
             xmlns:info='urn:import:org.nsesa.editor.gwt.editor.client.ui.info'
        >
    <ui:style src="EditorViewImpl.css" field="css" type='org.nsesa.editor.gwt.editor.client.ui.main.EditorViewCss'/>

    <ui:style field="res">
        .header {
            height: 100%;
            width: 100%;
            background-color: #dc143c;
            z-index: 2;
        }

        .footer {
            position: absolute;
            bottom: 0;
            right: -10px;
            background-color: #dc143c;
            color: #fff;
            font-size: smaller;
        }

        .tabPanel {

        }

        .documentsPanel {
            padding: 0px;
            margin: 0px;
            width: 100%;
            height: 100%;
        }
    </ui:style>

    <g:DockLayoutPanel unit="PX">
        <g:north size='40'>
            <header:HeaderView ui:field="headerView" styleName="{res.header}"/>
        </g:north>
        <g:center>
            <g:TabLayoutPanel ui:field="tabPanel" barHeight="0" styleName="{res.tabPanel}">
                <g:tab>
                    <g:header>Documents</g:header>
                    <g:HorizontalPanel ui:field="documentsPanel" styleName="{res.documentsPanel}"/>
                </g:tab>
                <g:tab>
                    <g:header>Amendments</g:header>
                    <amendments:AmendmentsPanelView ui:field="amendmentsPanelView"/>
                </g:tab>
                <g:tab>
                    <g:header>Info</g:header>
                    <info:InfoPanelView ui:field="infoPanelView"/>
                </g:tab>
            </g:TabLayoutPanel>
        </g:center>
        <g:south size="15">
            <footer:FooterView ui:field="footerView" styleName="{res.footer}"/>
        </g:south>
    </g:DockLayoutPanel>
</ui:UiBinder>