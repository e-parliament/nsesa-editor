<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:header='urn:import:org.nsesa.editor.gwt.editor.client.ui.header'
        >
    <ui:style src="EditorViewImpl.css" field="css" type='org.nsesa.editor.gwt.editor.client.ui.main.EditorViewCss'/>

    <ui:style field="res">
        .header {
            height: 100%;
            width: 100%;
            background-color: #dc143c;
            z-index: 2;
        }

        .tabPanel {

        }

        .documentsPanel {
            width: 100%;
            height: 100%;
        }
    </ui:style>

    <g:DockLayoutPanel unit="PX">
        <g:north size='40'>
            <header:HeaderView ui:field="headerView" styleName="{res.header}"/>
        </g:north>
        <g:center>
            <g:TabLayoutPanel ui:field="tabPanel" barHeight="0" styleName="{res.tabPanel}">
                <g:tab>
                    <g:header>Tab1</g:header>
                    <g:HorizontalPanel ui:field="documentsPanel" styleName="{res.documentsPanel}"/>
                </g:tab>
                <g:tab>
                    <g:header>Tab2</g:header>
                    <g:HTMLPanel>Tab2</g:HTMLPanel>
                </g:tab>
                <g:tab>
                    <g:header>Tab3</g:header>
                    <g:HTMLPanel>Tab3</g:HTMLPanel>
                </g:tab>
            </g:TabLayoutPanel>
        </g:center>
    </g:DockLayoutPanel>
</ui:UiBinder>