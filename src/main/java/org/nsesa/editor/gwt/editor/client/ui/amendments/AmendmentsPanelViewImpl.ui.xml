<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:header='urn:import:org.nsesa.editor.gwt.editor.client.ui.amendments.header'>
    <ui:style src="AmendmentsPanelViewImpl.css" field="css"
              type='org.nsesa.editor.gwt.editor.client.ui.amendments.AmendmentsPanelViewCss'/>
    <ui:style field="res">
        .verticalPanel {
            width: 100%;
        }

        .document {
            width: 100%;
            position: relative;
            top: -20px;
        }

        .scrollPanel {
            width: 100%;
            max-height: 700px;
        }

        .documentPanel {
            width: 98%;
            padding: 8%;
            border: 1px solid black;
            overflow: auto;
            -moz-box-shadow: 10px 10px 5px #888;
            -webkit-box-shadow: 10px 10px 5px #888;
            box-shadow: 10px 10px 5px #888;
        }

        .content {
            max-width: 960px;
            left: 0;
            right: 0;
            margin: 0 auto;
        }
        .amendmentsHeader {
            width: 100%;
            padding: 5px;
            background-color: #eee;
            border: 1px solid #ccc;
            border-top: clear;
        }

    </ui:style>
    <g:HTMLPanel>
        <header:AmendmentsHeaderView ui:field="amendmentsHeaderView" styleName="{res.amendmentsHeader}"/>
        <g:ScrollPanel styleName="{res.scrollPanel}">
        <g:VerticalPanel ui:field="amendments" styleName="{res.documentPanel}"/>
        </g:ScrollPanel>
    </g:HTMLPanel>
</ui:UiBinder>