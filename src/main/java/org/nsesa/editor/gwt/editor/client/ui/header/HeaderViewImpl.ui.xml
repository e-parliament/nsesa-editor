<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>
    <ui:style src="HeaderViewImpl.css" field="css" type='org.nsesa.editor.gwt.editor.client.ui.header.HeaderViewCss'/>
    <ui:style field="res">
        .logo {
            position: relative;
            left: 10px;
            top: 0px;
            font-size: 30px;
            font-weight: bold;
            font-family: serif;
        }

        .logo .part1 {
            color: #000;
            position: relative;
            left: 8px;
        }

        .logo .part2 {
            color: #aaa;
        }

        .logo .part3 {
            color: #000;
            position: relative;
            left: -5px;
        }

    </ui:style>
    <g:HTMLPanel>
        <g:HTML styleName="{res.logo}">
            <span class="{res.part1}">AT</span>
            <span class="{res.part2}">4</span>
            <span class="{res.part3}">AM</span>
        </g:HTML>
    </g:HTMLPanel>
</ui:UiBinder>