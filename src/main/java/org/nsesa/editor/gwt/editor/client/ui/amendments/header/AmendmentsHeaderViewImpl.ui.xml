              type='org.nsesa.editor.gwt.editor.client.ui.amendments.header.AmendmentsHeaderViewCss'/>
    <ui:style field="res">
        .selections {
            height: 100%;
            float: left;
        }
        .actions {
            height: 100%;
            float: left;
        }
    </ui:style>
    <g:MenuBar ui:field="menu">
        <g:MenuItem text="Select amendments">
            <g:MenuBar ui:field="menuSelection" vertical="true"/>
        </g:MenuItem>
        <g:MenuItem text="Run action">
            <g:MenuBar ui:field="menuAction" vertical="true"/>
        </g:MenuItem>
    </g:MenuBar>
</ui:UiBinder>