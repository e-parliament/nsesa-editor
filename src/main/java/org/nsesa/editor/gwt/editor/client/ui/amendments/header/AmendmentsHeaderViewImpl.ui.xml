<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>
    <ui:style src="AmendmentsHeaderViewImpl.css" field="css"
              type='org.nsesa.editor.gwt.editor.client.ui.amendments.header.AmendmentsHeaderViewCss'/>
    <ui:style field="res">
        .toolbar {
            vertical-align: bottom;
        }

        .selections {
            padding: 5px;
        }

        .actions {
            padding-right: 5px;
        }
    </ui:style>
    <g:HTMLPanel>
        <g:HorizontalPanel styleName="{res.toolbar}">
            <g:Label text="Select:"/>
            <g:HorizontalPanel ui:field="selections" styleName="{res.selections}"/>

            <g:Label text="Actions:"/>
            <g:HorizontalPanel ui:field="actions" styleName="{res.actions}"/>
        </g:HorizontalPanel>
    </g:HTMLPanel>
</ui:UiBinder>