<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:marker='urn:import:org.nsesa.editor.gwt.editor.client.ui.document.sourcefile.marker'
             xmlns:actionbar='urn:import:org.nsesa.editor.gwt.editor.client.ui.document.sourcefile.actionbar'
             xmlns:content='urn:import:org.nsesa.editor.gwt.editor.client.ui.document.sourcefile.content'
             xmlns:header='urn:import:org.nsesa.editor.gwt.editor.client.ui.document.header'
             xmlns:deadline='urn:import:org.nsesa.editor.gwt.core.client.ui.deadline'
             xmlns:amendments='urn:import:org.nsesa.editor.gwt.editor.client.ui.document.amendments'
             xmlns:info='urn:import:org.nsesa.editor.gwt.editor.client.ui.document.info'
        >
    <ui:with field='imageResources' type='org.nsesa.editor.gwt.editor.client.ui.header.resources.Resources'/>
    <ui:style src="DocumentViewImpl.css" field="css"
              type='org.nsesa.editor.gwt.editor.client.ui.document.DocumentViewCss'/>
    <ui:style field="res">

        .mainPanel {
            width: 100%;
        }

        .document {
            /* Note: parent td width is set in the document view!*/
            position: relative;
            top: -20px;
            width: 100%;

            border-collapse: collapse;
            border-spacing: inherit;
            max-width: none;
        }

        .contentHolder {
        }

        .content {

        }

        .deadline {
            position: relative;
            left: 0;
            right: 0;
            margin: 0 auto;
            padding-left: 5px;
            padding-right: 5px;
            padding-top: 5px;
            top: 10px;
            max-width: 350px;
            height: 20px;
            font-weight: bold;
            text-align: center;
            vertical-align: baseline;
            z-index: 1;
        }

        .documentHeader {
            width: 100%;
            padding: 5px;
            height: 20px;
            background-color: #eee;
            border: 1px solid #ccc;
        }

        .documentTitle {
            font-size: 2em;
            text-align: center;
        }

        .marker {
            /* Note: parent td width is set in the document view!*/
            width: 100%;
        }

        .tabPanel {
            border: 0;
        }

        .header {
            padding: 0;
            margin: 0;
            width: 100%;
        }

        .tabHeaders {
            padding: 0;
            margin: 0;
            position: relative;
            right: 12px;
            top: -21px;
            float: right;
        }

        .tabHeader {
            margin: 0;
            padding: 0;
        }

        .amendmentsPanel {
            left: 0;
            right: 0;
            margin: 0 auto;
            width: 100%;
            height: 100%;
        }

        .actionBarController {
            position: absolute;
            border: 1px solid gray;
            background-color: #eee;
            min-width: 350px;
            z-index: 1;
            padding: 5px;
        }
    </ui:style>
    <g:DockLayoutPanel ui:field="mainPanel" styleName="{res.mainPanel}" unit="PX">
        <g:north size="30">
            <g:HTMLPanel styleName="{res.header}">
                <g:HTML text="" styleName="{res.documentTitle} documentTitle" ui:field="documentTitle"/>
                <g:FlowPanel styleName="{res.tabHeaders}">
                    <g:Image resource='{imageResources.viewDocument}' styleName="{res.tabHeader}"
                             ui:field="viewDocument"/>
                    <g:Image resource='{imageResources.viewAmendments}' styleName="{res.tabHeader}"
                             ui:field="viewAmendments"/>
                    <g:Image resource='{imageResources.viewInfo}' styleName="{res.tabHeader}" ui:field="viewInfo"/>
                </g:FlowPanel>
            </g:HTMLPanel>
        </g:north>

        <g:center>
            <g:TabLayoutPanel ui:field="tabPanel" barHeight="0" styleName="{res.tabPanel}">
                <g:tab>
                    <g:header>Document</g:header>
                    <g:HTMLPanel styleName="document">
                        <header:DocumentHeaderView ui:field="documentHeaderView" styleName="{res.documentHeader}"/>
                        <actionbar:ActionBarView ui:field="actionBarView" styleName="{res.actionBarController}"/>
                        <deadline:DeadlineView ui:field="deadlineView" styleName="{res.deadline}"/>
                        <g:HorizontalPanel styleName="{res.document}" ui:field="horizontalPanel">
                            <g:HTMLPanel styleName="{res.contentHolder}" ui:field="contentHolder">
                                <content:ContentView ui:field="contentView" styleName="{res.content}"/>
                            </g:HTMLPanel>
                            <marker:MarkerView ui:field="markerView" styleName="{res.marker}"/>
                        </g:HorizontalPanel>
                    </g:HTMLPanel>
                </g:tab>
                <g:tab>
                    <g:header>Amendments</g:header>
                    <amendments:AmendmentsPanelView ui:field="amendmentsPanelView" styleName="{res.amendmentsPanel}"/>
                </g:tab>
                <g:tab>
                    <g:header>Info</g:header>
                    <info:InfoPanelView ui:field="infoPanelView"/>
                </g:tab>
            </g:TabLayoutPanel>
        </g:center>
    </g:DockLayoutPanel>

</ui:UiBinder>