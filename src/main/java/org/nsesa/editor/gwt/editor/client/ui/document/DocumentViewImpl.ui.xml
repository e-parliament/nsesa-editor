<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>
    <ui:style src="DocumentViewImpl.css" field="css"
              type='org.nsesa.editor.gwt.editor.client.ui.document.DocumentViewCss'/>
    <ui:style field="res">
        .documentPanel {
        }

        .contentPanel {
            width: 100%;
        }

        .documentHeaderPanel {

        }

        .markerPanel {
            width: 25px;
        }
    </ui:style>
    <g:HTMLPanel>
        <g:HTMLPanel ui:field="documentHeaderPanel" styleName="{res.documentHeaderPanel}"/>
        <g:HorizontalPanel styleName="{res.documentPanel}">
            <g:HTMLPanel ui:field="contentPanel" styleName="{res.contentPanel}"/>
            <g:HTMLPanel ui:field="markerPanel" styleName="{res.markerPanel}"/>
        </g:HorizontalPanel>
    </g:HTMLPanel>
</ui:UiBinder>