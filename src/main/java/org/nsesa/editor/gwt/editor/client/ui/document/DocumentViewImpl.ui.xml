<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:marker='urn:import:org.nsesa.editor.gwt.editor.client.ui.document.marker'
             xmlns:content='urn:import:org.nsesa.editor.gwt.editor.client.ui.document.content'
             xmlns:header='urn:import:org.nsesa.editor.gwt.editor.client.ui.document.header'
             xmlns:deadline='urn:import:org.nsesa.editor.gwt.core.client.ui.deadline'
             xmlns:amendments='urn:import:org.nsesa.editor.gwt.editor.client.ui.amendments'
             xmlns:info='urn:import:org.nsesa.editor.gwt.editor.client.ui.info'
        >
    <ui:with field='imageResources' type='org.nsesa.editor.gwt.editor.client.ui.header.resources.Resources'/>
    <ui:style src="DocumentViewImpl.css" field="css"
              type='org.nsesa.editor.gwt.editor.client.ui.document.DocumentViewCss'/>
    <ui:style field="res">

        .mainPanel {

        }

        .document {
            width: 100%;
            position: relative;
            top: -20px;
        }

        .content {
            max-width: 960px;
            left: 0;
            right: 0;
            margin: 0 auto;
        }

        .deadline {
            position: relative;
            left: 0;
            right: 0;
            margin: 0 auto;
            padding-left: 5px;
            padding-right: 5px;
            top: 10px;
            max-width: 350px;
            height: 20px;
            background-color: #dcdcdc;
            color: #fff;
            font-weight: bold;
            z-index: 3;
            text-align: center;
        }

        .documentHeader {
            width: 100%;
            padding: 5px;
            background-color: #eee;
            border: 1px solid #ccc;
            border-top: clear;
        }

        .marker {
            width: 18px;
        }

        .tabPanel {
        }

        .tabHeaders {
            padding: 0;
            margin: 0;
        }

        .tabHeader {
            margin: 0;
            padding: 0;
        }

        .amendmentsPanel {
            left: 0;
            right: 0;
            margin: 0 auto;
            width: 100%;
            height: 100%;
        }
    </ui:style>
    <g:DockLayoutPanel ui:field="mainPanel" styleName="{res.mainPanel}" unit="PX">
        <g:north size="30">
            <g:FlowPanel styleName="{res.tabHeaders}">
                <g:Image resource='{imageResources.viewDocument}' styleName="{res.tabHeader}" ui:field="viewDocument"/>
                <g:Image resource='{imageResources.viewAmendments}' styleName="{res.tabHeader}"
                         ui:field="viewAmendments"/>
                <g:Image resource='{imageResources.viewInfo}' styleName="{res.tabHeader}" ui:field="viewInfo"/>
            </g:FlowPanel>
        </g:north>

        <g:center>
            <g:TabLayoutPanel ui:field="tabPanel" barHeight="0" styleName="{res.tabPanel}">
                <g:tab>
                    <g:header>Document</g:header>
                    <g:HTMLPanel styleName="document">
                        <header:DocumentHeaderView ui:field="documentHeaderView" styleName="{res.documentHeader}"/>

                        <deadline:DeadlineView ui:field="deadlineView" styleName="{res.deadline}"/>
                        <g:HorizontalPanel styleName="{res.document}" ui:field="horizontalPanel">
                            <content:ContentView ui:field="contentView" styleName="{res.content}"/>
                            <marker:MarkerView ui:field="markerView" styleName="{res.marker}"/>
                        </g:HorizontalPanel>

                    </g:HTMLPanel>
                </g:tab>
                <g:tab>
                    <g:header>Amendments</g:header>
                    <amendments:AmendmentsPanelView ui:field="amendmentsPanelView" styleName="{res.amendmentsPanel}"/>
                </g:tab>
                <g:tab>
                    <g:header>Info</g:header>
                    <info:InfoPanelView ui:field="infoPanelView"/>
                </g:tab>
            </g:TabLayoutPanel>
        </g:center>
    </g:DockLayoutPanel>

</ui:UiBinder>