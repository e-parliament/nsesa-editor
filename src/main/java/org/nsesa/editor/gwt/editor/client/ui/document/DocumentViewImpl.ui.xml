<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:marker='urn:import:org.nsesa.editor.gwt.editor.client.ui.document.marker'
             xmlns:content='urn:import:org.nsesa.editor.gwt.editor.client.ui.document.content'
             xmlns:header='urn:import:org.nsesa.editor.gwt.editor.client.ui.document.header'>
    <ui:style src="DocumentViewImpl.css" field="css"
              type='org.nsesa.editor.gwt.editor.client.ui.document.DocumentViewCss'/>
    <ui:style field="res">
        .documentPanel {
        }

        .contentPanel {
            width: 100%;
        }

        .documentHeaderPanel {

        }

        .markerPanel {
            width: 25px;
        }
    </ui:style>
    <g:HTMLPanel>
        <header:DocumentHeaderView ui:field="documentHeaderView" styleName="{res.documentHeaderPanel}"/>
        <g:HorizontalPanel styleName="{res.documentPanel}">
            <content:ContentView ui:field="contentView" styleName="{res.contentPanel}"/>
            <marker:MarkerView ui:field="markerView" styleName="{res.markerPanel}"/>
        </g:HorizontalPanel>
    </g:HTMLPanel>
</ui:UiBinder>