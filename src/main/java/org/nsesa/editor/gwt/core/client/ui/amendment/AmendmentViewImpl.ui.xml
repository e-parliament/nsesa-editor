<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>
    <ui:style src="AmendmentViewImpl.css" field="css"
              type='org.nsesa.editor.gwt.core.client.ui.amendment.AmendmentViewCss'/>
    <ui:style field="res">
        .amendmentHolder {
            border: 1px solid red;
            width: 100%;
        }
    </ui:style>
    <g:HTMLPanel styleName="{res.amendmentHolder}">
        <div class="amendment">

            <div class="header">
                <div class="title">
                    <g:Label ui:field="title"/>
                </div>
            </div>
            <g:HTMLPanel ui:field="body">

            </g:HTMLPanel>
        </div>
    </g:HTMLPanel>
</ui:UiBinder>