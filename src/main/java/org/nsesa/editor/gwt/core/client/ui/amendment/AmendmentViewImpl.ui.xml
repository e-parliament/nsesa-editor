<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>
    <ui:style src="AmendmentViewImpl.css" field="css"
              type='org.nsesa.editor.gwt.core.client.ui.amendment.AmendmentViewCss'/>
    <ui:style field="res">
        .amendmentHolder {
            border: 1px solid red;
            width: 100%;
        }
    </ui:style>
    <g:HTMLPanel styleName="{res.amendmentHolder}">
        <div class="amendment">

            <div class="header">
                <div class="title">
                    <g:Label ui:field="title"/>
                </div>
            </div>
            <div class="content">
                <g:FlexTable ui:field="originalContentTable"/>
                <g:FlexTable ui:field="amendmentContentTable"/>
            </div>
            <div class="justification">
                <g:Label ui:field="justification"/>
            </div>
            <div class="footer">

            </div>
        </div>
    </g:HTMLPanel>
</ui:UiBinder>